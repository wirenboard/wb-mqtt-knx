{
  "type": "object",
  "title": "KNX Group Object Configuration",
  "definitions": {
    "datapointTypeMqtt": {
      "type": "string",
      "title": "MQTT",
      "enum": [
        "Raw_Value",
        "1.xxx_B1",
        "2.xxx_B2",
        "3.xxx_B1U3",
        "4.xxx_Character_Set",
        "5.xxx_8-Bit_Unsigned_Value",
        "6.xxx_V8",
        "7.xxx_2-Octet_Unsigned_Value",
        "8.xxx_2-Octet_Signed_Value",
        "9.xxx_2-Octet_Float_Value",
        "12.001_4-Octet_Unsigned_Value",
        "13.xxx_4-Octet_Signed_Value",
        "14.xxx_4-Octet_Float_Value",
        "20.xxx_N8"
      ],
      "default": "1.xxx_B1"
    },
    "datapointTypeJSON": {
      "type": "string",
      "title": "JSON",
      "enum": [
        "1.xxx_B1_JSON",
        "1.001_Switch_JSON",
        "1.002_Bool_JSON",
        "2.xxx_B2_JSON",
        "10.001_TimeOfDay_JSON"
      ],
      "default": "1.xxx_B1_JSON"
    },
    "device": {
      "headerTemplate": "device_header_template",
      "type": "object",
      "title": "Device",
      "properties": {
        "deviceId": {
          "type": "string",
          "title": "Device ID",
          "pattern": "^[^$#+\\/\"']+$",
          "options": {
            "patternmessage": "Incorrect Device ID"
          },
          "propertyOrder": 1
        },
        "deviceTitle": {
          "type": "string",
          "title": "Title",
          "propertyOrder": 2
        },
        "controls": {
          "type": "array",
          "title": "List of Controls",
          "items": {
            "$ref": "#/definitions/control"
          },
          "minItems": 0,
          "_format": "tabs",
          "propertyOrder": 3,
          "options": {
            "disable_collapse": true,
            "disable_array_delete_last_row": true
          }
        }
      },
      "required": [
        "deviceId",
        "deviceTitle",
        "controls"
      ]
    },
    "control": {
      "headerTemplate": "group_object_header_template",
      "type": "object",
      "title": "Control",
      "properties": {
        "controlId": {
          "type": "string",
          "title": "Control ID",
          "pattern": "^[^$#+\\/\"']+$",
          "options": {
            "patternmessage": "Incorrect Control ID"
          },
          "propertyOrder": 1
        },
        "controlTitle": {
          "type": "string",
          "title": "Title",
          "propertyOrder": 2
        },
        "groupAddress": {
          "title": "Group Address",
          "type": "string",
          "propertyOrder": 3,
          "pattern": "(?!^ *0\\/0\\/0 *$)(?!^ *0\\/0 *$)(?!^ *0 *$)(?=(^ *(\\d|[1-2]\\d|3[0-1])\\/([0-7])\\/(\\d|[1-9]\\d|1\\d{1,2}|2[0-4]\\d|25[0-5]) *$)|(^ *(\\d|[1-2]\\d|3[0-1])\\/(\\d|[^0]\\d{1,2}|1\\d{3}|20[0-3]\\d|204[0-7]) *$)|(^ *(\\d|[^0]\\d{1,3}|[1-5]\\d{4}|6[0-4]\\d{3}|65[0-4]\\d{2}|655[0-2]\\d|6553[0-5]) *$))",
          "options": {
            "inputAttributes": {
              "placeholder": "Example: 7/7/140 , 7/1034 , 32001"
            },
            "patternmessage": "Incorrect KNX address"
          }
        },
        "dataPointType": {
          "title": "Data point type",
          "oneOf": [
            { "$ref": "#/definitions/datapointTypeMqtt" },
            { "$ref": "#/definitions/datapointTypeJSON" }
          ],
          "propertyOrder": 4
        },
        "readPollInterval": {
          "type": "integer",
          "title": "READ poll interval for Devices (ms)",
          "minimum": 0,
          "maximum": 100000,
          "default": 0,
          "propertyOrder": 5
        },
        "readPollTimeout": {
          "type": "integer",
          "title": "READ poll timeout for Devices (ms)",
          "minimum": 0,
          "maximum": 100000,
          "default": 0,
          "propertyOrder": 6
        },
        "readOnly": {
          "type": "boolean",
          "title": "Read only",
          "default": false,
          "_format": "checkbox",
          "propertyOrder": 7
        }
      },
      "required": [
        "dataPointType"
      ]
    }
  },
  "properties": {
    "configVersion": {
      "type": "integer",
      "title": "Config version",
      "minimum": 1,
      "maximum": 1,
      "default": 1,
      "propertyOrder": 1,
      "options": {
        "hidden": true
      }
    },
    "debug": {
      "type": "boolean",
      "title": "Enable debug logging",
      "default": false,
      "_format": "checkbox",
      "propertyOrder": 2
    },
    "enableLegacyKnxDevice": {
      "type": "boolean",
      "title": "Enable the KNX Gateway Device: knx/data",
      "default": true,
      "_format": "checkbox",
      "propertyOrder": 3
    },
    "devices": {
      "type": "array",
      "title": "List of Devices",
      "items": {
        "$ref": "#/definitions/device"
      },
      "minItems": 0,
      "_format": "tabs",
      "propertyOrder": 5,
      "options": {
        "disable_collapse": true,
        "disable_array_delete_last_row": true
      }
    }
  },
  "options": {
    "disable_edit_json": false
  },
  "defaultProperties": [
    "configVersion",
    "debug"
  ],
  "required": [
    "configVersion",
    "debug",
    "devices",
    "enableLegacyKnxDevice"
  ],
  "configFile": {
    "path": "/etc/wb-mqtt-knx.conf",
    "service": "wb-mqtt-knx",
    "validate": false
  },
  "translations": {
    "en": {
      "device_header_template": "{{self.deviceId}}",
      "group_object_header_template": "{{self.controlId}} ({{self.groupAddress}})"
    }
  }
}